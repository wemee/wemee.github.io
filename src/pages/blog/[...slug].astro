---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import { getCollection } from 'astro:content';
import { formatDate } from '@/lib/utils';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---
<BaseLayout
  title={post.data.title}
  description={post.data.description}
  image={post.data.image}
  articleDate={post.data.pubDate}
  articleAuthor={post.data.author}
  articleTags={post.data.tags}
>
  <Navbar currentPage="blog" />
  <article class="container mt-5">
    <header class="mb-4">
      <h1>{post.data.title}</h1>
      <p class="text-muted">
        {formatDate(post.data.pubDate)} · {post.data.author}
      </p>
      <div class="mb-3">
        {post.data.tags.map((tag: string) => (
          <span class="badge bg-secondary me-1">{tag}</span>
        ))}
      </div>
      
      {post.data.image && (
        <div class="my-4">
          <img 
            src={post.data.image} 
            alt={post.data.title} 
            class="img-fluid rounded shadow-sm w-100" 
            style="max-height: 500px; object-fit: cover;"
          />
        </div>
      )}
      <hr />
    </header>
    
    <div class="blog-content">
      <Content />
    </div>
    
    <footer class="mt-5 pt-4 border-top">
      <a href="/blog/" class="btn btn-outline-secondary">
        ← 返回文章列表
      </a>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .blog-content :global(h3) {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .blog-content :global(pre) {
    background: #f4f4f4;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }
  
  .blog-content :global(code) {
    background: #f4f4f4;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
  }
  
  .blog-content :global(pre code) {
    background: transparent;
    padding: 0;
  }
  
  .blog-content :global(blockquote) {
    border-left: 4px solid #78c2ad;
    padding-left: 1rem;
    margin-left: 0;
    color: #666;
  }
  
  .blog-content :global(ul), .blog-content :global(ol) {
    padding-left: 1.5rem;
  }

  .blog-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 1rem 0;
  }
</style>
