---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { formatDate } from '@/lib/utils';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---
<BaseLayout currentPage="blog" currentPage="blog"
  title={post.data.title}
  description={post.data.description}
  image={post.data.image}
  articleDate={post.data.pubDate}
  articleAuthor={post.data.author}
  articleTags={post.data.tags}
>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 mt-12">
    <header class="mb-6">
      <h1 class="text-3xl font-bold text-base-50 mb-2">{post.data.title}</h1>
      <p class="text-base-600 mb-3">
        {formatDate(post.data.pubDate)} · {post.data.author}
      </p>
      <div class="flex flex-wrap gap-1 mb-4">
        {post.data.tags.map((tag: string) => (
          <span class="inline-block px-2 py-0.5 text-xs rounded bg-base-600 text-base-400">
            {tag}
          </span>
        ))}
      </div>
      
      {post.data.image && (
        <div class="my-6">
          <img 
            src={post.data.image} 
            alt={post.data.title} 
            class="w-full max-h-[500px] object-cover rounded-lg shadow-sm" 
          />
        </div>
      )}
      <hr class="border-base-600" />
    </header>
    
    <div class="blog-content text-base-400">
      <Content />
    </div>
    
    <footer class="mt-10 pt-6 border-t border-base-600">
      <a href="/blog/" class="inline-block px-4 py-2 rounded border border-base-600 text-base-400 hover:bg-base-600 transition">
        ← 返回文章列表
      </a>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .blog-content :global(h3) {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .blog-content :global(pre) {
    background: #f4f4f4;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }
  
  .blog-content :global(code) {
    background: #f4f4f4;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
  }
  
  .blog-content :global(pre code) {
    background: transparent;
    padding: 0;
  }
  
  .blog-content :global(blockquote) {
    border-left: 4px solid #78c2ad;
    padding-left: 1rem;
    margin-left: 0;
    color: #666;
  }
  
  .blog-content :global(ul), .blog-content :global(ol) {
    padding-left: 1.5rem;
  }

  .blog-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 1rem 0;
  }
</style>
