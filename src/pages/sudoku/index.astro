---
import SudokuAppLayout from '../../layouts/SudokuAppLayout.astro';
import { SudokuBoard } from '../../components/sudoku/Board';
import { Controls } from '../../components/sudoku/Controls';
import { GameInfo } from '../../components/sudoku/GameInfo';
import { WinModal } from '../../components/sudoku/WinModal';
---

<SudokuAppLayout title="Sudoku - Pure Logic" description="A next-gen Sudoku experience. Pure Logic. Pure Zen.">
  <main class="min-h-screen flex flex-col items-center justify-center p-4 bg-gradient-to-b from-sudoku-bg to-[#073642]">
    <WinModal client:only="react" />
    <div class="p-6 bg-[#073642]/50 backdrop-blur-md rounded-3xl border border-sudoku-text/20 relative">
      <header class="text-center mb-6">
        <h1 class="text-4xl font-extrabold text-[#fdf6e3] tracking-widest m-0 drop-shadow-md">
          SUDOKU
        </h1>
        <p class="text-xs text-sudoku-text uppercase tracking-[0.2em] mt-1">
          Pure Logic. Pure Zen.
        </p>
      </header>

      <GameInfo client:only="react" />
      <SudokuBoard client:only="react" />
      <Controls client:only="react" />
    </div>
  </main>
</SudokuAppLayout>
