    height: 1.25rem;
    cursor: pointer;
    flex-shrink: 0;
    margin: 0;
  }

  .todo-item .todo-content {
    flex: 1;
    min-width: 0;
  }

  .todo-item .todo-title {
    margin: 0;
    word-break: break-word;
  }

  .todo-item.completed .todo-title {
    text-decoration: line-through;
    opacity: 0.6;
  }

  .todo-item .todo-indicator {
    font-size: 0.75rem;
    opacity: 0.5;
    flex-shrink: 0;
  }

  .todo-item .todo-delete {
    opacity: 0;
    transition: opacity 0.15s ease;
    flex-shrink: 0;
  }

  .todo-item:hover .todo-delete {
    opacity: 1;
  }

  /* Sub-items in modal */
