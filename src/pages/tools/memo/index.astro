    opacity: 0.6;
  }

  .sub-item .sub-item-delete {
    opacity: 0;
    transition: opacity 0.15s ease;
    background: none;
    border: none;
    color: var(--bs-danger);
    padding: 0;
    font-size: 0.8rem;
    flex-shrink: 0;
  }

