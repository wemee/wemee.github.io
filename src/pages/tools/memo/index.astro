<script is:inline>
  // ===== State =====
  let todos = [];
  let editingId = null;
  let editModal = null;

  // ===== DOM Elements =====
  const newItemInput = document.getElementById('newItemInput');
  const addBtn = document.getElementById('addBtn');
  const todoList = document.getElementById('todoList');
  const itemCount = document.getElementById('itemCount');
  const clearCompletedBtn = document.getElementById('clearCompletedBtn');
  const editModalEl = document.getElementById('editModal');
  const editTitle = document.getElementById('editTitle');
  const editNotes = document.getElementById('editNotes');
  const subItemsList = document.getElementById('subItemsList');
  const newSubItemInput = document.getElementById('newSubItemInput');
  const addSubItemBtn = document.getElementById('addSubItemBtn');
  const deleteItemBtn = document.getElementById('deleteItemBtn');

  // ===== Initialize =====
  document.addEventListener('DOMContentLoaded', () => {
    editModal = new bootstrap.Modal(editModalEl);
    loadTodos();
    render();

    // Save on modal close
    editModalEl.addEventListener('hidden.bs.modal', saveCurrentEdit);
  });

  // ===== LocalStorage =====
  function loadTodos() {
    try {
      const stored = localStorage.getItem('wemee_todos');
      todos = stored ? JSON.parse(stored) : [];
    } catch (e) {
      todos = [];
    }
  }

  function saveTodos() {
    localStorage.setItem('wemee_todos', JSON.stringify(todos));
  }

  // ===== Render =====
  function render() {
    todoList.innerHTML = '';

    todos.forEach(todo => {
      const li = document.createElement('li');
      li.className = 'list-group-item todo-item' + (todo.completed ? ' completed' : '');
      li.dataset.id = todo.id;

      const hasDetails = todo.notes || (todo.subItems && todo.subItems.length > 0);
      const indicator = hasDetails ? '<span class="todo-indicator">ğŸ“</span>' : '';

      li.innerHTML = `
        <input type="checkbox" class="form-check-input todo-checkbox" ${todo.completed ? 'checked' : ''}>
        <div class="todo-content">
          <p class="todo-title">${escapeHtml(todo.title)}</p>
        </div>
        ${indicator}
        <button class="btn btn-sm btn-outline-danger todo-delete" title="åˆªé™¤">Ã—</button>
      `;

      // Checkbox click
      li.querySelector('.todo-checkbox').addEventListener('click', (e) => {
        e.stopPropagation();
        toggleTodo(todo.id);
      });

      // Delete click
      li.querySelector('.todo-delete').addEventListener('click', (e) => {
        e.stopPropagation();
        deleteTodo(todo.id);
      });

      // Item click - open edit modal
      li.addEventListener('click', () => openEditModal(todo.id));

      todoList.appendChild(li);
    });

    updateCounts();
  }

  function updateCounts() {
    const total = todos.length;
    const completed = todos.filter(t => t.completed).length;

    itemCount.textContent = total + ' é …';

    if (completed > 0) {
      clearCompletedBtn.classList.remove('d-none');
      clearCompletedBtn.textContent = `æ¸…é™¤å·²å®Œæˆ (${completed})`;
    } else {
      clearCompletedBtn.classList.add('d-none');
    }
  }

  // ===== Todo Actions =====
  function addTodo(title) {
    if (!title.trim()) return;

    const todo = {
      id: Date.now().toString(),
      title: title.trim(),
      completed: false,
      notes: '',
      subItems: []
    };

    todos.unshift(todo);
    saveTodos();
    render();
  }

  function toggleTodo(id) {
    const todo = todos.find(t => t.id === id);
    if (todo) {
      todo.completed = !todo.completed;
      saveTodos();
      render();
    }
  }

  function deleteTodo(id) {
    todos = todos.filter(t => t.id !== id);
    saveTodos();
    render();
  }

  function clearCompleted() {
    todos = todos.filter(t => !t.completed);
    saveTodos();
    render();
  }

  // ===== Edit Modal =====
  function openEditModal(id) {
    const todo = todos.find(t => t.id === id);
    if (!todo) return;

    editingId = id;
    editTitle.value = todo.title;
    editNotes.value = todo.notes || '';
    renderSubItems(todo.subItems || []);

    editModal.show();
  }

  function saveCurrentEdit() {
    if (!editingId) return;

    const todo = todos.find(t => t.id === editingId);
    if (todo) {
      todo.title = editTitle.value.trim() || todo.title;
      todo.notes = editNotes.value.trim();
      saveTodos();
      render();
    }

    editingId = null;
  }

  function renderSubItems(subItems) {
    subItemsList.innerHTML = '';

    subItems.forEach((sub, index) => {
      const li = document.createElement('li');
      li.className = 'list-group-item sub-item py-2' + (sub.completed ? ' completed' : '');
      li.dataset.index = index;

      li.innerHTML = `
        <input type="checkbox" class="form-check-input sub-item-checkbox" ${sub.completed ? 'checked' : ''}>
        <span class="sub-item-text">${escapeHtml(sub.text)}</span>
        <button class="sub-item-delete" title="åˆªé™¤">Ã—</button>
      `;

      // Checkbox
      li.querySelector('.sub-item-checkbox').addEventListener('change', (e) => {
        toggleSubItem(index);
      });

      // Delete
      li.querySelector('.sub-item-delete').addEventListener('click', () => {
        deleteSubItem(index);
      });

      subItemsList.appendChild(li);
    });
  }

  function addSubItem(text) {
    if (!text.trim() || !editingId) return;

    const todo = todos.find(t => t.id === editingId);
    if (todo) {
      if (!todo.subItems) todo.subItems = [];
      todo.subItems.push({ text: text.trim(), completed: false });
      saveTodos();
      renderSubItems(todo.subItems);
    }
  }

  function toggleSubItem(index) {
    const todo = todos.find(t => t.id === editingId);
    if (todo && todo.subItems && todo.subItems[index]) {
      todo.subItems[index].completed = !todo.subItems[index].completed;
      saveTodos();
      renderSubItems(todo.subItems);
    }
  }

  function deleteSubItem(index) {
    const todo = todos.find(t => t.id === editingId);
    if (todo && todo.subItems) {
      todo.subItems.splice(index, 1);
      saveTodos();
      renderSubItems(todo.subItems);
    }
  }

  // ===== Event Listeners =====
  newItemInput.addEventListener('keydown', (e) => {
    if (e.key === 'Enter' && !e.isComposing) {
      addTodo(newItemInput.value);
      newItemInput.value = '';
    }
  });

  addBtn.addEventListener('click', () => {
    addTodo(newItemInput.value);
    newItemInput.value = '';
    newItemInput.focus();
  });

  clearCompletedBtn.addEventListener('click', clearCompleted);

  newSubItemInput.addEventListener('keydown', (e) => {
    if (e.key === 'Enter' && !e.isComposing) {
      addSubItem(newSubItemInput.value);
      newSubItemInput.value = '';
    }
  });

  addSubItemBtn.addEventListener('click', () => {
    addSubItem(newSubItemInput.value);
    newSubItemInput.value = '';
    newSubItemInput.focus();
  });

  deleteItemBtn.addEventListener('click', () => {
    if (editingId) {
      deleteTodo(editingId);
      editingId = null;
      editModal.hide();
    }
  });

  // ===== Utilities =====
  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }
</script>
