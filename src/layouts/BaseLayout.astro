---
import Footer from '@/components/Footer.astro';
import '@/styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  articleDate?: Date;
  articleAuthor?: string;
  articleTags?: string[];
}

const {
  title,
  description = "挫屎勇的個人網站 - 這裡紀錄開發心得、分享數學工具與網頁遊戲。",
  image = "/images/avatar.webp",
  articleDate,
  articleAuthor,
  articleTags = []
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site);
const isArticle = !!articleDate;
---
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="canonical" href={canonicalURL} />
  <link rel="sitemap" href="/sitemap-index.xml" />

  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="title" content={title} />
  <meta name="description" content={description} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content={isArticle ? "article" : "website"} />
  <meta property="og:url" content={Astro.url} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={socialImageURL} />
  <meta property="og:site_name" content="挫屎勇的個人網站" />
  {isArticle && articleDate && (
    <meta property="article:published_time" content={articleDate.toISOString()} />
  )}
  {isArticle && articleAuthor && (
    <meta property="article:author" content={articleAuthor} />
  )}
  {isArticle && articleTags.map((tag) => (
    <meta property="article:tag" content={tag} />
  ))}

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content={Astro.url} />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={socialImageURL} />

  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-L980F1NV6M"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-L980F1NV6M');
  </script>

  <!-- Tailwind CSS is imported via global.css -->

  <!-- KaTeX CSS for math rendering (rendered at build time via rehype-katex) -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous">
  <meta name="google-site-verification" content="R4S40Rh0laFxWlBMFmr6nNqvc2QUowCa-EonPkLfis4" />

  <!-- JSON-LD Structured Data -->
  {isArticle ? (
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": title,
      "description": description,
      "image": socialImageURL.href,
      "datePublished": articleDate?.toISOString(),
      "author": {
        "@type": "Person",
        "name": articleAuthor || "wemee"
      },
      "publisher": {
        "@type": "Person",
        "name": "wemee"
      },
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": canonicalURL.href
      },
      "keywords": articleTags.join(", ")
    })} />
  ) : (
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "挫屎勇的個人網站",
      "url": Astro.site?.href,
      "description": description
    })} />
  )}
</head>
<body>
  <slot />
  <Footer />

</body>
</html>
